<Window x:Class="RulerOverlay.Windows.CalibrationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Calibrate Screen"
        Width="400" Height="280"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="Screen Calibration"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Instructions -->
        <TextBlock Grid.Row="1"
                   TextWrapping="Wrap"
                   Margin="0,0,0,15">
            <Run Text="For accurate inch and centimeter measurements, enter your screen's diagonal size."/>
            <LineBreak/>
            <Run Text="You can find this in your monitor's specifications (e.g., 15.6&quot;, 24&quot;, 27&quot;)."/>
        </TextBlock>

        <!-- Diagonal Input -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Screen Diagonal:"
                       VerticalAlignment="Center"
                       Margin="0,0,10,0"/>

            <TextBox Grid.Column="1"
                     x:Name="DiagonalTextBox"
                     Text="{Binding DiagonalInput, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"
                     Padding="5"
                     FontSize="14"/>

            <TextBlock Grid.Column="2"
                       Text="inches"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </Grid>

        <!-- Validation Error -->
        <TextBlock Grid.Row="3"
                   Text="{Binding ErrorMessage}"
                   Foreground="Red"
                   Margin="0,0,0,10"
                   Visibility="{Binding HasError, Converter={StaticResource BooleanToVisibilityConverter}}"/>

        <!-- PPI Display -->
        <StackPanel Grid.Row="4" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Current PPI:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CurrentPpi}" FontSize="16"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Calculated PPI:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding CalculatedPpi}" FontSize="16" FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Common Screen Sizes Hint -->
        <TextBlock Grid.Row="5"
                   TextWrapping="Wrap"
                   FontSize="11"
                   Foreground="Gray"
                   Margin="0,0,0,10">
            <Run Text="Common sizes: Laptop 13.3&quot;-15.6&quot;, Desktop 21&quot;-27&quot;, Ultrawide 34&quot;-49&quot;"/>
        </TextBlock>

        <!-- Buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Width="80"
                    Padding="5,3"
                    Margin="0,0,10,0"
                    Click="CancelButton_Click"/>
            <Button Content="Calibrate"
                    Width="80"
                    Padding="5,3"
                    IsEnabled="{Binding CanCalibrate}"
                    Click="CalibrateButton_Click"/>
        </StackPanel>
    </Grid>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
</Window>
