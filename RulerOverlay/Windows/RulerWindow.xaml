<Window x:Class="RulerOverlay.Windows.RulerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:RulerOverlay.Converters"
        xmlns:local="clr-namespace:RulerOverlay.Controls"
        mc:Ignorable="d"
        Title="Ruler Overlay"
        Width="500" Height="90"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseDown="Window_MouseDown"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Window.Resources>
        <!-- Menu Converters -->
        <converters:StringEqualsConverter x:Key="UnitEqualsConverter"/>
        <converters:StringEqualsConverter x:Key="ColorEqualsConverter"/>
        <converters:IntEqualsConverter x:Key="OpacityEqualsConverter"/>
        <converters:IntEqualsConverter x:Key="RotationEqualsConverter"/>
        <converters:BoolToMagnifierTextConverter x:Key="BoolToMagnifierTextConverter"/>
        <converters:BoolToEdgeSnappingTextConverter x:Key="BoolToEdgeSnappingTextConverter"/>

        <!-- Mini Icon Button Style -->
        <Style x:Key="MiniIconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="18"/>
            <Setter Property="Height" Value="18"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#80FFFFFF"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="BorderBrush" Value="#AAAAAA"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#B0FFFFFF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#60FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Canvas x:Name="RootCanvas">
        <Grid x:Name="RootGrid"
              Width="{Binding Width}"
              Height="{Binding Height}">
            <!-- Rotation and Translation Transform -->
            <Grid.RenderTransform>
                <TransformGroup>
                    <RotateTransform x:Name="RotationTransform" Angle="{Binding Rotation}" />
                    <TranslateTransform x:Name="TranslationTransform" />
                </TransformGroup>
            </Grid.RenderTransform>

            <!-- Main Ruler Background -->
        <Border x:Name="RulerBackground"
                Background="{Binding BackgroundBrush}"
                CornerRadius="3">

            <!-- Context Menu -->
            <Border.ContextMenu>
                <ContextMenu>
                    <!-- Position Section -->
                    <MenuItem Header="Reset to Center"
                              Command="{Binding ResetPositionCommand}"
                              InputGestureText="Ctrl+R"/>

                    <Separator/>

                    <!-- Calibration Section -->
                    <MenuItem Header="Calibrate Screen..."
                              Click="CalibrateScreen_Click"/>
                    <MenuItem Header="{Binding Ppi, StringFormat='Current PPI: {0}'}"
                              IsEnabled="False"
                              Foreground="Gray"/>

                    <Separator/>

                    <!-- Help Section -->
                    <MenuItem Header="Help &amp; Shortcuts"
                              Click="ShowHelp_Click"
                              InputGestureText="F1"/>

                    <Separator/>

                    <!-- Copy Measurement Section -->
                    <MenuItem Header="Copy Measurement"
                              Command="{Binding CopyMeasurementCommand}"
                              InputGestureText="Ctrl+C"/>
                    <MenuItem Header="{Binding Width, StringFormat='Current: {0:F0} px'}"
                              IsEnabled="False"
                              Foreground="Gray"/>

                    <Separator/>

                    <!-- Measurement Unit Section -->
                    <MenuItem Header="Measurement Unit">
                        <MenuItem Header="Pixels"
                                  Command="{Binding SetUnitCommand}"
                                  CommandParameter="pixels"
                                  IsCheckable="True"
                                  IsChecked="{Binding Unit, Mode=OneWay, Converter={StaticResource UnitEqualsConverter}, ConverterParameter=pixels}"/>
                        <MenuItem Header="Inches"
                                  Command="{Binding SetUnitCommand}"
                                  CommandParameter="inches"
                                  IsCheckable="True"
                                  IsChecked="{Binding Unit, Mode=OneWay, Converter={StaticResource UnitEqualsConverter}, ConverterParameter=inches}"/>
                        <MenuItem Header="Centimeters"
                                  Command="{Binding SetUnitCommand}"
                                  CommandParameter="centimeters"
                                  IsCheckable="True"
                                  IsChecked="{Binding Unit, Mode=OneWay, Converter={StaticResource UnitEqualsConverter}, ConverterParameter=centimeters}"/>
                    </MenuItem>

                    <Separator/>

                    <!-- Transparency Section -->
                    <MenuItem Header="Transparency">
                        <MenuItem Header="20%"
                                  Command="{Binding SetOpacityCommand}"
                                  CommandParameter="20"
                                  IsCheckable="True"
                                  IsChecked="{Binding Opacity, Mode=OneWay, Converter={StaticResource OpacityEqualsConverter}, ConverterParameter=20}"/>
                        <MenuItem Header="40%"
                                  Command="{Binding SetOpacityCommand}"
                                  CommandParameter="40"
                                  IsCheckable="True"
                                  IsChecked="{Binding Opacity, Mode=OneWay, Converter={StaticResource OpacityEqualsConverter}, ConverterParameter=40}"/>
                        <MenuItem Header="60%"
                                  Command="{Binding SetOpacityCommand}"
                                  CommandParameter="60"
                                  IsCheckable="True"
                                  IsChecked="{Binding Opacity, Mode=OneWay, Converter={StaticResource OpacityEqualsConverter}, ConverterParameter=60}"/>
                        <MenuItem Header="80%"
                                  Command="{Binding SetOpacityCommand}"
                                  CommandParameter="80"
                                  IsCheckable="True"
                                  IsChecked="{Binding Opacity, Mode=OneWay, Converter={StaticResource OpacityEqualsConverter}, ConverterParameter=80}"/>
                        <MenuItem Header="100%"
                                  Command="{Binding SetOpacityCommand}"
                                  CommandParameter="100"
                                  IsCheckable="True"
                                  IsChecked="{Binding Opacity, Mode=OneWay, Converter={StaticResource OpacityEqualsConverter}, ConverterParameter=100}"/>
                    </MenuItem>

                    <Separator/>

                    <!-- Color Section -->
                    <MenuItem Header="Color">
                        <MenuItem Header="White"
                                  Command="{Binding SetColorCommand}"
                                  CommandParameter="white"
                                  IsCheckable="True"
                                  IsChecked="{Binding Color, Mode=OneWay, Converter={StaticResource ColorEqualsConverter}, ConverterParameter=white}"/>
                        <MenuItem Header="Black"
                                  Command="{Binding SetColorCommand}"
                                  CommandParameter="black"
                                  IsCheckable="True"
                                  IsChecked="{Binding Color, Mode=OneWay, Converter={StaticResource ColorEqualsConverter}, ConverterParameter=black}"/>
                        <MenuItem Header="Yellow"
                                  Command="{Binding SetColorCommand}"
                                  CommandParameter="yellow"
                                  IsCheckable="True"
                                  IsChecked="{Binding Color, Mode=OneWay, Converter={StaticResource ColorEqualsConverter}, ConverterParameter=yellow}"/>
                        <MenuItem Header="Cyan"
                                  Command="{Binding SetColorCommand}"
                                  CommandParameter="cyan"
                                  IsCheckable="True"
                                  IsChecked="{Binding Color, Mode=OneWay, Converter={StaticResource ColorEqualsConverter}, ConverterParameter=cyan}"/>
                    </MenuItem>

                    <Separator/>

                    <!-- Point-to-Point Mode Section -->
                    <MenuItem Header="Point-to-Point Mode"
                              Click="PointToPointMode_Click"
                              InputGestureText="Ctrl+P"/>

                    <!-- Edge Guides Section -->
                    <MenuItem Header="Clear All Guides"
                              Command="{Binding ClearGuidesCommand}"/>

                    <Separator/>

                    <!-- Magnifier Section -->
                    <MenuItem Header="{Binding MagnifierEnabled, Converter={StaticResource BoolToMagnifierTextConverter}}"
                              Command="{Binding ToggleMagnifierCommand}"
                              InputGestureText="Ctrl+M"
                              IsCheckable="True"
                              IsChecked="{Binding MagnifierEnabled, Mode=OneWay}"/>

                    <!-- Edge Snapping Section -->
                    <MenuItem Header="{Binding EdgeSnappingEnabled, Converter={StaticResource BoolToEdgeSnappingTextConverter}}"
                              Command="{Binding ToggleEdgeSnappingCommand}"
                              InputGestureText="Ctrl+S"
                              IsCheckable="True"
                              IsChecked="{Binding EdgeSnappingEnabled, Mode=OneWay}"/>

                    <Separator/>

                    <!-- Window Management Section -->
                    <MenuItem Header="Minimize to System Tray"
                              Click="MinimizeToTray_Click"/>

                    <Separator/>

                    <!-- Rotation Section -->
                    <MenuItem Header="Rotation">
                        <MenuItem Header="0° (Horizontal)"
                                  Command="{Binding SetRotationCommand}"
                                  CommandParameter="0"
                                  IsCheckable="True"
                                  IsChecked="{Binding Rotation, Mode=OneWay, Converter={StaticResource RotationEqualsConverter}, ConverterParameter=0}"/>
                        <MenuItem Header="45°"
                                  Command="{Binding SetRotationCommand}"
                                  CommandParameter="45"
                                  IsCheckable="True"
                                  IsChecked="{Binding Rotation, Mode=OneWay, Converter={StaticResource RotationEqualsConverter}, ConverterParameter=45}"/>
                        <MenuItem Header="90° (Vertical)"
                                  Command="{Binding SetRotationCommand}"
                                  CommandParameter="90"
                                  IsCheckable="True"
                                  IsChecked="{Binding Rotation, Mode=OneWay, Converter={StaticResource RotationEqualsConverter}, ConverterParameter=90}"/>
                        <MenuItem Header="135°"
                                  Command="{Binding SetRotationCommand}"
                                  CommandParameter="135"
                                  IsCheckable="True"
                                  IsChecked="{Binding Rotation, Mode=OneWay, Converter={StaticResource RotationEqualsConverter}, ConverterParameter=135}"/>
                        <MenuItem Header="180°"
                                  Command="{Binding SetRotationCommand}"
                                  CommandParameter="180"
                                  IsCheckable="True"
                                  IsChecked="{Binding Rotation, Mode=OneWay, Converter={StaticResource RotationEqualsConverter}, ConverterParameter=180}"/>
                    </MenuItem>

                    <Separator/>

                    <!-- Close Section -->
                    <MenuItem Header="Close"
                              Click="CloseApp_Click"
                              InputGestureText="Ctrl+Q"/>
                </ContextMenu>
            </Border.ContextMenu>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Ruler Markings - Canvas size matches ruler dimensions -->
                <Canvas x:Name="MarkingsCanvas"
                        Width="{Binding Width}"
                        Height="{Binding Height}" />

                <!-- Mini Function Icons (visible on hover) -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Margin="0,8,0,0">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Opacity" Value="0"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsMouseOver, ElementName=RulerBackground}" Value="True">
                                    <Setter Property="Opacity" Value="1"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <!-- Minimize to Tray Icon -->
                    <Button Content="▼"
                            Click="MinimizeToTray_Click"
                            ToolTip="Minimize to System Tray"
                            Style="{StaticResource MiniIconButtonStyle}"/>

                    <!-- Rotate Icon -->
                    <Button Click="QuickRotate_Click"
                            ToolTip="Rotate 90°"
                            Style="{StaticResource MiniIconButtonStyle}">
                        <TextBlock Text="⤾" Margin="0,-4,0,0"/>
                    </Button>

                    <!-- Point-to-Point Icon -->
                    <Button Content="⟷"
                            Click="PointToPointMode_Click"
                            ToolTip="Point-to-Point Mode (Ctrl+P)"
                            Style="{StaticResource MiniIconButtonStyle}"/>

                    <!-- Options/Menu Icon -->
                    <Button Content="☰"
                            Click="ShowContextMenu_Click"
                            ToolTip="Options"
                            Style="{StaticResource MiniIconButtonStyle}"/>

                    <!-- Close Icon -->
                    <Button Content="✕"
                            Click="CloseApp_Click"
                            ToolTip="Close (Ctrl+Q)"
                            Style="{StaticResource MiniIconButtonStyle}"/>
                </StackPanel>

                <!-- Edge Guides Canvas -->
                <ItemsControl ItemsSource="{Binding EdgeGuides}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Line X1="{Binding Position}" Y1="0"
                                  X2="{Binding Position}" Y2="90"
                                  Stroke="Magenta"
                                  StrokeThickness="2"
                                  Opacity="0.8">
                                <Line.Effect>
                                    <DropShadowEffect Color="Magenta" BlurRadius="6" ShadowDepth="0" Opacity="0.6"/>
                                </Line.Effect>
                            </Line>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Left Resize Handle -->
                <Rectangle x:Name="LeftResizeHandle"
                          Width="10"
                          Fill="Transparent"
                          Cursor="SizeWE"
                          HorizontalAlignment="Left"
                          MouseDown="LeftResizeHandle_MouseDown"
                          MouseMove="ResizeHandle_MouseMove"
                          MouseUp="ResizeHandle_MouseUp" />

                <!-- Right Resize Handle -->
                <Rectangle x:Name="RightResizeHandle"
                          Width="10"
                          Fill="Transparent"
                          Cursor="SizeWE"
                          HorizontalAlignment="Right"
                          MouseDown="RightResizeHandle_MouseDown"
                          MouseMove="ResizeHandle_MouseMove"
                          MouseUp="ResizeHandle_MouseUp" />
            </Grid>
        </Border>

            <!-- Toast Notification -->
            <local:ToastControl x:Name="Toast"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Margin="0,0,0,20"
                                IsHitTestVisible="False"
                                Panel.ZIndex="-1"/>
        </Grid>

        <!-- Magnifier Popup (outside RootGrid so it is not affected by ruler rotation) -->
        <Popup x:Name="MagnifierPopup"
               Placement="Absolute"
               AllowsTransparency="True"
               IsOpen="False">
            <local:MagnifierControl x:Name="Magnifier"/>
        </Popup>
    </Canvas>
</Window>
