<UserControl x:Class="RulerOverlay.Controls.MagnifierControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Width="200" Height="200">

    <Border BorderBrush="Cyan"
            BorderThickness="2"
            CornerRadius="3"
            Background="Black">
        <Grid>
            <!-- Magnified Image -->
            <Image x:Name="MagnifierImage"
                   Stretch="None"
                   RenderOptions.BitmapScalingMode="NearestNeighbor"/>

            <!-- Crosshair Overlay -->
            <Canvas>
                <!-- Vertical Line -->
                <Line X1="100" Y1="0"
                      X2="100" Y2="200"
                      Stroke="Red"
                      StrokeThickness="1"
                      Opacity="0.7"/>

                <!-- Horizontal Line -->
                <Line X1="0" Y1="100"
                      X2="200" Y2="100"
                      Stroke="Red"
                      StrokeThickness="1"
                      Opacity="0.7"/>

                <!-- Center Point -->
                <Ellipse Width="6" Height="6"
                         Canvas.Left="97" Canvas.Top="97"
                         Fill="Red"
                         Stroke="White"
                         StrokeThickness="1"/>
            </Canvas>

            <!-- Zoom Level Indicator -->
            <TextBlock x:Name="ZoomLevelText"
                       Text="4x"
                       Foreground="White"
                       Background="#CC000000"
                       Padding="5,2"
                       FontSize="11"
                       FontWeight="Bold"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="0,0,5,5"/>
        </Grid>
    </Border>
</UserControl>
